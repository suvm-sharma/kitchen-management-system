{
  "name": "infinity-kitchen",
  "version": "3.0.10",
  "description": "Infinity Kitchen",
  "type": "module",
  "main": "src/index.js",
  "bin": "bin/createNodeApp.cjs",
  "repository": "https://github.com/suvm-sharma/kitchen-management-system",
  "bugs": {
    "url": "https://github.com/suvm-sharma/kitchen-management-system"
  },
  "author": "Shubham Kumar <suvmsharma121@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.20.1 <23"
  },
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "pre:dev": "cross-env NODE_ENV=development nodemon index.js",
    "dev": "nodemon src/index.js",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:js": "jest -i --colors --verbose --detectOpenHandles -- 'js$'",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=lcov",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "prepare": "husky install",
    "release": "standard-version && git push --follow-tags origin master",
    "commit": "git add -A && cz"
  },
  "keywords": [
    "node",
    "javascript",
    "node.js",
    "boilerplate",
    "generator",
    "express",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "es6",
    "es7",
    "jest",
    "docker",
    "passport",
    "joi",
    "eslint",
    "prettier"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^6.2.0",
    "@jest/globals": "^27.5.1",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "concurrently": "^7.1.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.1",
    "express-session": "^1.17.3",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "mongoose": "^7.4.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.7.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "pm2": "^5.1.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.2.0",
    "two-step-auth": "^1.1.2",
    "validator": "^13.7.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1",
    "yarn": "^1.22.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  }
}
